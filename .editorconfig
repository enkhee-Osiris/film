# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
max_line_length = 100
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.html]
indent_size = 2

[{*.js,*.jsx,*.json,*.yml,*.mdx}]
indent_size = 2

# Format Config
[{package.json,.editorconfig,.babelrc,.eslintrc}]
indent_size = 2

[{*.md,*.mdx}]
trim_trailing_whitespace = false
